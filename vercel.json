{
  "version": 2,
  "builds": [
    {
      "src": "frontend/weatherly-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/weatherly-app/$1"
    }
  ],
  "env": {
    "WEATHER_API_KEY": "@weather_api_key"
  }
}